<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/integrantes/addColaborador" method="POST">

                        <div class="form-group">
                            <input type="text" class="form-control" name="cvu_tecnm" placeholder="cvu TecNM" autofocus>

                        </div>

                        <input type="hidden" name="id_proyecto" id="" value="{{id_proyecto}}">

                        <div class="form-group">

                            <input type="text" class="form-control" name="nombre" placeholder="Nombre">
                            <input type="text" class="form-control" name="apellido1" placeholder="apellido">
                            <input type="text" class="form-control" name="apellido2" placeholder="apellido">

                        </div>

                        <div class="form-group">

                            <input type="text" class="form-control" name="plantel_adscripcion"
