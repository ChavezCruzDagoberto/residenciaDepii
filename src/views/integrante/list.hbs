{{!-- LISTA DE INTEGRANTES --}}

{{!-- Este div ajusta el contenido para que no interfiera con la barra izquierda --}}
<div class="main" id="principal">

  {{!-- Este div permite ocupar el 100% de pantalla disponible --}}
  <div class="container-fluid">

    {{!-- div centra horizontalmente el contenido --}}
    <div class="d-flex justify-content-center vh-90">

      {{!-- div centra verticalmente el contenido --}}
      <div class="align-items-start w-100 mt-5" align="center" id="contenedorprincipal">

        {{!-- Cabecera --}}
        <div class="w-100 mb-5">
          <h1> Lista de integrantes. </h1>
        </div>

        {{!-- Comienza la tabla --}}
        <div class="container">
          <div class=" row mx-auto">
            <div class="col-lg-12">
              <div class="table-responsive">
                <table class="table-sm table-hover table-bordered table-striped pb-5" cellspacing="0" width="100%">

                  {{!-- Cabecera de la tabla. --}}
                  <thead>
                    <tr>
                      <th scope="col">CVU TecNM</th>
                      <th scope="col">Nombre(s)</th>
                      <th scope="col">Primer apellido</th>
                      <th scope="col">Segundo apellido</th>
                      <th scope="col">Plantel de Adscripcion</th>
                      <th scope="col">Email</th>
                      <th scope="col">Editar</th>
                      <th scope="col">Borrar</th>
                    </tr>
                  </thead>

                  {{!-- Cuerpo de la tabla. --}}
                  <tbody>
                    {{#each integrantes}}

                    <tr>
                      <th style="background-color: lightgray;">{{cvu_tecnm}}</th>
                      <td>{{nombre}}</td>
                      <td>{{apellido1}}</td>
                      <td>{{apellido2}}</td>
                      <td>{{plantel_adscripcion}}</td>
                      <td>{{email}}</td>
                      <td align="center"><a href="/integrantes/edit/{{cvu_tecnm}}"
                          class="btn btn-sm btn-outline-warning">
                          <i class="fas fa-user-edit"></i>&ensp;Editar</a></td>
                      <td align="center"><a href="/integrantes/delete/{{cvu_tecnm}}"
                          class="btn btn-sm btn-outline-danger" id="prueba">
                          <i class="fas fa-trash"></i>&ensp;Borrar</a></td>
                    </tr>

                    {{!-- En caso de que no existan participantes --}}
                    {{else}}
                    {{#if admin}}
                    <div class="card bg-light mb-3" style="max-width: 50rem;">
                      <div class="card-header" align="left"> Â¡MENSAJE! </div>
                      <div class="card-body">
                        <p class="card-text"> NO SE ENCUENTRA REGISTRADO NINGUN INTEGRANTE. </p>
                        <a href="/integrantes/add"> Crear nuevo integrante. </a>
                      </div>
                    </div>
                    {{/if}}
                    {{/each}}
                  </tbody>
                </table><br><br>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Media queries --}}
<style>
  @media (min-width: 768px) {
    #contenedorprincipal {
      width: 75% !important;
    }
  }

  @media (max-width: 767px) {
    #principal {
      margin-left: 0px !important;
    }
  }
</style>