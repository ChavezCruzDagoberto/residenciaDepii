{{!-- LISTA DE INTEGRANTES --}}

{{!-- Este div ajusta el contenido para que no interfiera con la barra izquierda --}}
<div class="main" id="contenido">

  {{!-- Este div permite ocupar el 100% de pantalla disponible --}}
  <div class="container-fluid">

    {{!-- div centra horizontalmente el contenido --}}
    <div class="d-flex justify-content-center vh-90">

      {{!-- div centra verticalmente el contenido --}}
      <div class="align-items-start w-100 mt-5" align="center">

        {{!-- Cabecera --}}
        <div class="m-5" align="center">
          <h1> Lista de integrantes. </h1>
        </div>

        {{!-- Comienza la tabla --}}
        <table class="table table-sm table-bordered table-striped table-hover">

          {{!-- Cabecera de la tabla. --}}
          <thead>
            <tr>
              <th scope="col">CVU TecNM</th>
              <th scope="col">Nombre(s)</th>
              <th scope="col">Primer apellido</th>
              <th scope="col">Segundo apellido</th>
              <th scope="col">Plantel de Adscripcion</th>
              <th scope="col">Email</th>
              <th scope="col">Editar</th>
              <th scope="col">Eliminar</th>
            </tr>
          </thead>

          {{!-- Cuerpo de la tabla. --}}
          <tbody>
            {{#each integrantes}}

            <tr>
              <th>{{cvu_tecnm}}</th>
              <td>{{nombre}}</td>
              <td>{{apellido1}}</td>
              <td>{{apellido2}}</td>
              <td>{{plantel_adscripcion}}</td>
              <td>{{email}}</td>
              <td align="center"><a href="/integrantes/edit/{{cvu_tecnm}}" class="btn btn-sm btn-outline-warning">
                  <i class="fas fa-user-edit"></i>&ensp;Editar</a></td>
              <td align="center"><a href="/integrantes/delete/{{cvu_tecnm}}" class="btn btn-sm btn-outline-danger"
                  id="prueba">
                  <i class="fas fa-trash"></i>&ensp;Eliminar</a></td>
            </tr>

            {{!-- En caso de que no existan participantes --}}
            {{else}}

            <div class="card bg-light mb-3" style="max-width: 50rem;">
              <div class="card-header" align="left"> Â¡MENSAJE! </div>
              <div class="card-body">
                <p class="card-text"> NO SE ENCUENTRA REGISTRADO NINGUN PARTICIPANTE. </p>
                <a href="/integrantes/add"> Crear nuevo integrante. </a>
              </div>
            </div>

            {{/each}}
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>