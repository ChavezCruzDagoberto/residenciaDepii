          <div class="card card-body text-center">
            <p>NO HAY NINGUN PARTICIPANTE GUARDADO AUN </p>
            <a href="/integrantes/add"> AGREGAR NUEVO </a>
          </div>
        </div>
        {{/each}}




      </tbody>
    </table>




  </div>
</div>
</div>