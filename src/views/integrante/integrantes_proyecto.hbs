<div class="main" id="contenido">
<div class="container p-4">
  <div class="row">

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Rol</th>
          <th scope="col">cvu_tecnm</th>
          <th scope="col">Nombre</th>
          <th scope="col">plantel de Adscripcion</th>
          <th scope="col">Eliminar del proyecto</th>
          <th scope="col">Editar</th>
        </tr>
      </thead>

      <tbody>
        {{#each integrantes}}


        <tr>
          <th>{{rol_proyecto}}</th>
          <th>{{cvu_tecnm}}</th>
          <td>{{nombre}} {{apellido1}} {{apellido2}}</td>

          <td>{{plantel_adscripcion}}</td>


          <td><a href="/integrantes/proyecto/delete/{{cvu_tecnm}}/{{id_proyecto}}" class="btn btn-danger" id="prueba">
