{{!-- EDITAR INTEGRANTE --}}

{{!-- Este div ajusta el contenido para que no interfiera con la barra. --}}
<div class="main" id="contenido">

    {{!-- Este div permite ocupar el 100% del espacio vertical disponible --}}
    <div class="container-fluid">

        {{!-- div centra horizontalmente el contenido --}}
        <div class="d-flex justify-content-center vh-100">

            {{!-- div centra verticalmente el contenido --}}
            <div class="my-auto w-75" align="center">

                {{!-- Cabecera --}}
                <div class="m-5">
                    <h1> Editar integrante. </h1>
                </div>

                {{!-- Campos para editar el integrante --}}
                <div class="d-flex justify-content-center">
                    <form action="/integrantes/edit/{{integrante.cvu_tecnm}}" method="POST" class="pt-2 w-50">

                        <div class="form-inline justify-content-end">
                            <label for="cvu_tecnm1" class="m-2"> CVU TecNM </label>
                            <input type="text" id="cvu_tecnm" value="{{integrante.cvu_tecnm}}" name="cvu_tecnm1"
                                class="form-control col-sm-3" onkeypress="validarCvu(event)" autofocus required>
                            <label class="m-1" style="color: red;"> * </label>
                        </div><br>

                        <div class="form-inline justify-content-end">
                            <label for="nombre" class="m-2"> Nombre(s) </label>
                            <input type="text" id="nombre" value="{{integrante.nombre}}" name="nombre"
                                class="form-control col-sm-4" onkeypress="validarNombre(event)" required>
                            <label class="m-1" style="color: red;"> * </label>
                        </div><br>

                        <div class="form-inline justify-content-end">
                            <label for="apellido1" class="m-2"> Primer apellido </label>
                            <input type="text" id="apellido1" value="{{integrante.apellido1}}" name="apellido1"
                                onkeypress="validarApellido1(event)" class="form-control col-sm-4" required>
                            <label class="m-1" style="color: red;"> * </label>
                        </div><br>

                        <div class="form-inline justify-content-end">
                            <label for="apellido2" class="m-2"> Segundo apellido </label>
                            <input type="text" id="apellido2" value="{{integrante.apellido2}}" name="apellido2"
                                onkeypress="validarApellido2(event)" class="form-control col-sm-4">
                            <label class="m-1" style="color: white;"> * </label>
                        </div><br>

                        <div class="form-inline justify-content-end">
                            <label for="plantel_adscripcion" class="m-2"> Plantel de adscripcion </label>
                            <input type="text" value="{{integrante.plantel_adscripcion}}" name="plantel_adscripcion"
                                onkeypress="validarAdscripcion(event)" class="form-control col-sm-6" required>
                            <label class="m-1" style="color: red;"> * </label>
                        </div><br>

                        <div class="form-inline justify-content-end">
                            <label for="email" class="m-2"> Email </label>
                            <input type="text" value="{{integrante.email}}" name="email" class="form-control col-sm-5"
                                onkeypress="validarEmail(event)" required>
                            <label class="m-1" style="color: red;"> * </label>
                        </div><br>

                        <label style="color: red;"> * Campo obligatorio </label><br>


                        <div class="m-5" align="center">
                            <div class="form-group" align="center">
                                <button class="btn btn-outline-primary btn-block col-sm-4"><i
                                        class="fas fa-save"></i>&emsp;Guardar cambios </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function validarNombre(event) {
        var a = document.getElementById("nombre");
        var b = a.value;
        var c = contarEspacios(b);
        console.log(c);
        if (b.length < 25) {
            if ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 241) || (event.charCode == 209) || (event.charCode == 32)) {
                if (c >= 1 && event.charCode == 32) {
                    event.preventDefault();
                } else { a.value = (b + String.fromCharCode(event.charCode)).toUpperCase(); }

            }
        }
        event.preventDefault();

    }

    function validarCvu(event) {
        var a = document.getElementById("cvu_tecnm");
        var b = a.value;
        if (b.length < 8) {
            if ((event.charCode >= 48 && event.charCode <= 57) || (event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 241) || (event.charCode == 209)) {
                a.value = (b + String.fromCharCode(event.charCode)).toUpperCase();

            }
        }
        event.preventDefault();
    }

    function validarApellido1(event) {
        var a = document.getElementById("apellido1");
        var b = a.value;
        if (b.length < 15) {
            if ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 241) || (event.charCode == 209)) {
                a.value = (b + String.fromCharCode(event.charCode)).toUpperCase();

            }
        }
        event.preventDefault();
    }

    function validarApellido2(event) {
        var a = document.getElementById("apellido2");
        var b = a.value;
        if (b.length < 15) {
            if ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 241) || (event.charCode == 209)) {
                a.value = (b + String.fromCharCode(event.charCode)).toUpperCase();

            }
        }
        event.preventDefault();
    }

    function validarEmail(event) {
        //console.log(event.charCode);
        var a = document.getElementById("email");
        var b = a.value;
        var c = b.indexOf(".");
        var d = b.indexOf("@");
        if (b.length < 30) {
            if ((event.charCode >= 48 && event.charCode <= 57) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 241) || (event.charCode == 209) || (event.charCode == 64) || (event.charCode == 46)) {

                if ((c >= 1 && event.charCode == 46) || d >= 1 && event.charCode == 64) {
                    event.preventDefault();
                } else {

                    a.value = (b + String.fromCharCode(event.charCode)).toLowerCase();
                }
            }
        }
        event.preventDefault();
    }

    function contarEspacios(valor) {
        var contador = 0;
        for (i = 0; i < valor.length; i++) {
            if (valor[i] == " ") contador++;

        }
        return contador;

    }

    function validarAdscripcion(event) {
        var a = document.getElementById("adscripcion");
        var b = a.value;
        var c = contarEspacios(b);

        if (b.length < 40) {
            if ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 241) || (event.charCode == 209) || (event.charCode == 32)) {
                if (c >= 3 && event.charCode == 32) {
                    event.preventDefault();
                } else { a.value = (b + String.fromCharCode(event.charCode)).toUpperCase(); }

            }
        }
        event.preventDefault();

    }

</script>