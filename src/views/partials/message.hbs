{{#if success}}
<div class="container-fluid justify-content-center w-50" role="alert">
    <div class="mx-auto">
        <div class="alert alert-info alert-dismissible fade show "><br>

            {{success}}
            <button type="button " class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    </div>
</div>
{{/if}}


{{#if message}}

<div class="container-fluid justify-content-center w-50" role="alert">
    <div class="mx-auto"><br>
        <div class="alert alert-danger alert-dismissible fade show ">

            {{message}}
            <button type="button " class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
    </div>
</div>

{{/if}}


