<!--<div class="container p-4"> !-->
<div class="main" id="contenido">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/proyecto/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="titulo" placeholder="Nombre del Proyecto"
                                autofocus required>

                        </div>
                        <div class="form-group">

                            <input type="text" class="form-control" name="modalidad" placeholder="modalidad" required>


                        </div>

                        <div class="form-group">
                            <h6>fecha sometido</h6>
                            <input type="date" name="fecha_sometido" required />

                        </div>

                        <div class="form-group">
                            <h6>fecha dictaminado</h6>
                            <input type="date" name="fecha_dictamen" required />

                        </div>

                        <div class="form-group">

                            <input type="text" class="form-control" name="clave_financiamiento"
                                placeholder="clave de financiamiento" required>


                        </div>

                        <div class="form-group">
                            <h6>convocatoria </h6>

                            <select name="id_convocatoria" class="mx-auto" id="select_convocatoria" required>
                                {{#each convocatorias }}

                                <option aria-valuemax="50" value={{id_convocatoria}} required>{{nombre_convocatoria}}
                                </option>

                                {{/each}}

                            </select>

                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block"> Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>