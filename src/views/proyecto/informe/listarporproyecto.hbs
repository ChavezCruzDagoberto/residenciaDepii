<div class="main" id="contenido">
  <div class="container p-4" >
  <div class="row">

    <table class="table">
      <thead>
        <tr>
          <th scope="col">No de Informe</th>
          <th scope="col">fecha de inicio</th>
          <th scope="col">fecha final</th>

        </tr>
      </thead>

      <tbody>
        {{#each consulta}}
        <form action="/informe/edit/{{id_informe}}" method="POST">
          <tr>
            <th> {{no_informe}}<input type="hidden" value={{no_informe}} name="no_informe"></th>
            <td><input type="text" value="{{fecha_inicio}}" name="fecha_inicio"></td>
            <td><input type="text" value="{{fecha_fin}}" name="fecha_fin"></td>

            <td>
              <button class="btn btn-secondary">Editar y guardar</button>
            </td>
            <td><a href="/informe/delete/{{id_informe}}" class="btn btn-danger"> Eliminar</a></td>



          </tr>
        </form>
        {{else}}
        <div class="col-m4 mx-auto">
          <div class="card card-body text-center">
            <p>NO HAY NINGUN informe para este proyecto GUARDADO AUN </p>
            <a href="/informe/add"> CREAR NUEVO</a>
          </div>
        </div>
        {{/each}}

      </tbody>
    </table>




  </div>
</div>
</div>