{{!-- LISTA DE PROYECTOS --}}

{{!-- Este div ajusta el contenido para que no interfiera con la barra. --}}
<div class="main" id="contenido">

  {{!-- Este div permite ocupar el 100% del espacio vertical disponible --}}
  <div class="container-fluid">

    {{!-- div centra horizontalmente el contenido --}}
    <div class="d-flex justify-content-center vh-100">

      {{!-- div centra verticalmente el contenido --}}
      <div class="my-auto w-100" align="center">

        {{!-- Cabecera --}}
        <div class="m-5" align="center">
          <h1> Lista de proyectos. </h1>
        </div>

        {{!-- Comienza la tabla --}}
        <table class="table table-sm table-bordered table-striped table-hover">

          {{!-- Cabecera de la tabla --}}
          <thead>
            <tr>
              <th scope="col">Nombre de la proyecto</th>
              <th scope="col">Modalidad</th>
              <th scope="col">Fecha sometido</th>
              <th scope="col">Fecha dictamen </th>
              <th scope="col">Financiamiento</th>
              <th scope="col">Responsable</th>

              <th scope="col">Editar</th>
              <!--<th scope="col">Eliminar</th>-->
              <th scope="col">Detalles</th>
            </tr>
          </thead>

          {{!-- Cuerpo de la tabla --}}
          <tbody>
            {{#each proyectos}}
            <tr>
              <th>{{titulo}}</th>
              <td>{{modalidad}}</td>
              <td>{{fecha_sometido}}</td>
              <td>{{fecha_dictamen}}</td>
              <td>{{clave_financiamiento}}</td>
              <td>{{nombre}}</td>

              <td align="center"><a href="/proyecto/edit/{{id_proyecto}}" class="btn btn-sm btn-outline-warning"><i
                    class="far fa-edit"></i>&ensp;Editar</a></td>
                    <!--
              <td align="center"><a href="/proyecto/delete/{{id_proyecto}}" class="btn btn-sm btn-outline-danger"><i
                    class="fas fa-trash"></i>&ensp;Eliminar</a></td>-->
              <td align="center"><a href="/proyecto/detalle/{{id_proyecto}}" class="btn btn-sm btn-outline-success"><i
                    class="fas fa-info"></i>&ensp;Detalles</a></td>
            </tr>

            {{!-- En caso de no encontrar proyectos creados --}}
            {{else}}
            {{!-- <div class="col-m4 mx-auto">
              <div class="card card-body text-center">
                <p>NO HAY NINGUNA CONVOCATORIA GUARDADO AUN </p>
                <a href="/proyecto/add"> CREAR NUEVO</a>
              </div>
            </div> --}}

            <div class="card bg-light mb-3" style="max-width: 50rem;">
              <div class="card-header" align="left"> Â¡MENSAJE! </div>
              <div class="card-body">
                <p class="card-text"> NO SE ENCUENTRA REGISTRADO NINGUN PROYECTO. </p>
                <a href="/financiamiento/add"> Crear nuevo proyecto. </a>
              </div>
            </div>
            {{/each}}

          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>