<div class="main" id="principal">

  {{!-- Este div permite ocupar el 100% de pantalla disponible --}}
  <div class="container-fluid">

    {{!-- div centra horizontalmente el contenido --}}
    <div class="d-flex justify-content-center vh-80">

      {{!-- div centra verticalmente el contenido --}}
      <div class="align-items-start w-100 mt-5" id="contenedorprincipal">

        {{!-- Cabecera --}}
        <div class="w-100 mb-5" align="center">
          <h1> Búsqueda de Proyectos Anteriores. </h1>
        </div>


        <div style="height:50px"></div>

        <!--Ejemplo tabla con DataTables-->
        <div class="container">
          <div class=" row mx-auto">
            <div class="col-lg-12">
              <div class="table-responsive">
                <table id="example" class="table-sm table-striped table-bordered" cellspacing="0" width="100%">
                  
                  <thead>
                    <tr>
                      <th>Nombre del proyecto</th>
                      <th>Financiamiento</th>
                      <th>Responsable</th>
                      <th>Año</th>
                      <th>Archivo</th>
                      
                    </tr>
                  </thead>

                  <tbody>
                    {{#each proyectos}}
                    <tr>
                      <th style="background-color: lightgray;">{{titulo}}</th>
                      <td>{{clave_financiamiento}}</td>
                      <td>{{responsable}}</td>
                      <td>{{anio}}</td>
                      <td align="center"><a href="/proyecto/historico/{{clave_financiamiento}}" target="blank"
                          class="btn btn-sm btn-outline-success"><i class="fas fa-info"></i>&ensp;Ver Archivo</a></td>

                    </tr>
                    {{/each}}

                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Media queries --}}
<style>
  @media (min-width: 768px) {
    #contenedorprincipal {
      width: 75% !important;
    }
  }

  @media (max-width: 767px) {
    #principal {
      margin-left: 0px !important;
    }
  }
</style>