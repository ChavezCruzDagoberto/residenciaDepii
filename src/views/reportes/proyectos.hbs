<div class="main" id="principal">

 <header>
          <h1 class="text-center text-light">Reporte</h1>
          <h2 class="text-center text-light"> <span class="badge badge-warning">Proyectos</span></h2>
        </header>
  {{!-- Este div permite ocupar el 100% de pantalla disponible --}}
  <div class="container w-100">

    {{!-- div centra horizontalmente el contenido --}}
    <div class="d-flex  vh-90">

      {{!-- div centra verticalmente el contenido --}}
      <div class="align-items-start w-100 mt-5"  id="contenedorprincipal">



        
        <div style="height:50px"></div>

        <!--Ejemplo tabla con DataTables-->
        <div class="container">
          <div class=" row mx-auto">
            <div class="col-lg-12">
              <div class="table-responsive">
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th>Cvu TecNM</th>
                      <th>Nombre</th>
                      <th>Plantel</th>
                      <th>Rol</th>
                      <th>Titulo</th>
                      <th>Año</th>
                      <th>Clave</th>

                    </tr>
                  </thead>
                  <tbody>

                    {{#each proyectos}}
                    <tr>
                      <th>{{cvu_tecnm}}</th>
                      <td>{{nombre}}</td>
                      <td>{{plantel_adscripcion}}</td>
                      <td>{{rol_proyecto}}</td>
                      <td>{{titulo}}</td>
                      <td>{{año}}</td>
                      <td>{{clave_financiamiento}}</td>


                    </tr>
                    {{/each}}

                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>