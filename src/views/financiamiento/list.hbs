{{!-- LISTA DE FINANCIAMIENTOS --}}

{{!-- Este div ajusta el contenido para que no interfiera con la barra. --}}
<div class="main" id="principal">

  {{!-- Este div permite ocupar el 100% del espacio vertical disponible --}}
  <div class="container w-100">

    {{!-- div centra horizontalmente el contenido --}}
    <div class="d-flex justify-content-center vh-90">

      {{!-- div centra verticalmente el contenido --}}
      <div class=" align-items-start w-100 mt-5" align="center" id="contenedorprincipal">


        {{!-- Cabecera --}}
        <div class="w-100 mb-5">
          <h1> Lista de claves de financiamientos. </h1>
        </div><br>

        {{!-- Comienza la tabla --}}
        <div class="container">
          <div class=" row mx-auto">
            <div class="col-lg-12">
              <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover cellspacing="0" width="100%"">

                  {{!-- Cabecera de la tabla --}}
                  <thead>
                    <tr>
                      <th scope="col">Clave de financiamiento</th>
                      <th scope="col">Fecha de inicio</th>
                      <th scope="col">Fecha de expiracion </th>
                      <th scope="col">Editar</th>
                      <th scope="col">Eliminar</th>
                      <th scope="col">Montos</th>
                    </tr>
                  </thead>

                  {{!-- Cuerpo de la tabla --}}
                  <tbody>
                    {{#each financiamiento}}

                    <tr>
                      <th style="background-color: lightgray;">{{clave_financiamiento}}</th>
                      <td>{{vigencia_inicio}}</td>
                      <td>{{vigencia_fin}}</td>
                      <td align="center"> <a href="/financiamiento/edit/{{clave_financiamiento}}"
                          class="btn btn-sm btn-outline-warning"><i class="far fa-edit"></i>&ensp;Editar</a></td>
                      <td align="center"> <a href="/financiamiento/delete/{{clave_financiamiento}}"
                          class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i>&ensp;Eliminar</a></td>
                      <td align="center"> <a href="/financiamiento/partidas/{{clave_financiamiento}}"
                          class="btn btn-sm btn-outline-success"><i class="fas fa-info"></i>&ensp;Partidas</a></td>
                    </tr>

                    {{!-- En caso de que no se encuentre algun financiamiento --}}
                    {{else}}

                    <div class="card bg-light mb-3" style="max-width: 50rem;">
                      <div class="card-header" align="left"> Â¡MENSAJE! </div>
                      <div class="card-body">
                        <p class="card-text"> NO SE ENCUENTRA REGISTRADA NINGUNA CLAVE DE FINANCIAMIENTO. </p>
                        <a href="/financiamiento/add"> Crear nueva clave de financiamiento. </a>
                      </div>
                    </div>

                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Media queries --}}
<style>
  @media (min-width: 768px) {
    #contenedorprincipal {
      width: 75% !important;
    }
  }

  @media (max-width: 767px) {
    #principal {
      margin-left: 0px !important;
    }
  }
</style>