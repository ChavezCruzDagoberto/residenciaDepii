{{!-- LISTAR SUBPARTIDAS --}}

{{!-- Este div ajusta el contenido para que no interfiera con la barra. --}}
<div class="main" id="principal">

  {{!-- Este div permite ocupar el 100% del espacio vertical disponible --}}
  <div class="container w-100">

    {{!-- div centra horizontalmente el contenido --}}
    <div class="d-flex justify-content-center vh-90">

      {{!-- div centra verticalmente el contenido --}}
      <div class="align-items-start w-100 mt-5" align="center" id="contenedorprincipal">

        {{!-- Cabecera --}}
        <div class="w-100 mb-5">
          <h1> Glosario de subpartidas. </h1>
        </div>

        {{!-- Comienza la tabla --}}
        <div class="container">
          <div class=" row mx-auto">
            <div class="col-lg-12">
              <div class="table-responsive">
                <table class="table-sm table-bordered table-striped table-hover" cellspacing="0" width="100%">

                  {{!-- Cabecera de la tabla --}}
                  <thead>
                    <tr>
                      <th scope="col">Partida</th>
                      <th scope="col">Subpartida</th>
                      <th scope="col">Descripcion</th>
                      <th scope="col">Editar</th>
                      <th scope="col">Eliminar subpartida</th>
                    </tr>
                  </thead>

                  {{!-- Cuerpo de la tbala --}}
                  <tbody>
                    {{#each subpartidas}}

                    <form action="/subpartida/edit/{{clave_subpartida}}" method="POST">

                      <tr>
                        <input type="hidden" name="clave_partida" value="{{clave_partida}}">
                        <th style="background-color: lightgray;">{{clave_partida}}</th>
                        <td>{{clave_subpartida}}</td>
                        <td><input type="text" value="{{descripcion}}" name="descripcion" class=""></td>
                        <td align="center"><button class="btn btn-sm btn-outline-success"><i
                              class="fas fa-save"></i>&ensp;Guardar cambios</button></td>
                        <td align="center"><a href="/subpartida/delete/{{clave_subpartida}}"
                            class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i>&ensp;Eliminar</a></td>
                      </tr>

                    </form>

                    {{!-- En caso de no encontrar subpartidas --}}
                    {{else}}
                    <div class="col-m4 mx-auto">
                      <div class="card card-body text-center">
                        <p>NO HAY NINGUNA SUBPARTIDA GUARDADO AUN </p>
                        <a href="/subpartida/add"> CREAR NUEVO</a>
                      </div>
                    </div>
                    {{/each}}

                  </tbody>
                </table>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{!-- Media queries --}}
<style>
  @media (min-width: 768px) {
    #contenedorprincipal {
      width: 75% !important;
    }
  }

  @media (max-width: 767px) {
    #principal {
      margin-left: 0px !important;
    }
  }
</style>