{{!-- INDEX. --}}
<div class="container mt-sm-5 mt-5" align="center">

  <div>
    <h1 style="color: #f26419;" id="lbldepi">
      Departamento de Estudios de Posgrado e Investigación.
    </h1>
  </div>

  <div align="center">
    <h1 style="color: black;" id="lblgestion"><small class="text-muted">
        Plataforma de Gestión de Proyectos de Investigación.
      </small></h1>
  </div><br>


  
  <div class="table-responsive" hidden >
    <table id="notifyTable" class="table-sm table-bordered table-striped table-hover" cellspacing="0" width="100%">

      {{!-- Cabecera de la tabla --}}
      <thead>
        {{#if notificaciones}}
        <tr>
          <th scope="col">id</th>

          <th scope="col">Destinatario</th>
          <th scope="col">mensaje </th>
{{/if}}
        </tr>
      </thead>

      {{!-- Cuerpo de la tabla --}}
      <tbody>
        {{#each notificaciones}}
        <tr>
          <th>{{id_notificacion}}</th>

          <td>{{destinatario}}</td>
          <td>{{mensaje}}</td>
        </tr>

        {{/each}}

      </tbody>
    </table>
  </div>

 

  {{!-- Logotipo del ITO. --}}
  <div class="mt-2" align="center">
    <img src="images/logoito.png">
  </div>

</div>


{{!-- Media queries --}}
<style>
  img {
    height: 150px;
  }

  @media (min-width: 576px) {
    img {
      height: 300px;
    }
  }

  h1 {
    font-size: 2.0rem;
  }

  @media (min-width: 576px) {
    #lbldepi {
      font-size: 2.5rem;
    }
  }

  @media (min-width: 576px) {
    #lblgestion {
      font-size: 2.5rem;
    }
  }
</style>
<script>
    
  window.onload = vers;
  function vers() {
    var x = document.getElementById("notify");
   var table = document.getElementById("notifyTable").tBodies[0];
   var verCuantos=document.getElementById("cantidadNotify");
   

  

var r = 0;
    while (row = table.rows[r++]) {
      var valor = row.children[2].innerText;
      
      let elemento =document.createElement("a");
      elemento.setAttribute("href","/notificaciones/list");
      elemento.setAttribute("class","dropdown-item");
      elemento.innerHTML=valor;
      x.prepend(elemento);

    }
    
verCuantos.innerHTML=table.rows.length+"";


  }
</script>